<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= reportType %> Report</h2>
    <% if (report._id) { %>
      <a href="/reports/download/<%= report._id %>" class="btn btn-success">
        <i class="fas fa-file-pdf"></i> Download PDF
      </a>
    <% } else { %>
      <form action="/reports/generate" method="POST" class="d-inline">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="reportType" value="<%= reportType %>">
        <input type="hidden" name="startDate" value="<%= startDate %>">
        <input type="hidden" name="endDate" value="<%= endDate %>">
        <input type="hidden" name="format" value="pdf">
        <button type="submit" class="btn btn-success">
          <i class="fas fa-file-export"></i> Generate PDF
        </button>
      </form>
    <% } %>
  </div>
  
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Report Details</h5>
      <p class="card-text">
        <strong>Date Range:</strong> 
  <%= new Date(startDate).toLocaleDateString('en-US', { timeZone: 'UTC' }) %> 
  to 
  <%= new Date(endDate).toLocaleDateString('en-US', { timeZone: 'UTC' }) %>
      </p>
      <p class="card-text">
        <strong>Generated On:</strong> <%= new Date().toLocaleString() %>
      </p>
      <p class="card-text">
        <strong>Records Found:</strong> <%= data.length %>
      </p>
    </div>
  </div>

  <% if (data && data.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <% if (reportType === 'Sales') { %>
            <tr>
              <th>Sale ID</th>
              <th>Date</th>
              <th>Item</th>
              <th>Quantity</th>
              <th>Unit Price</th>
              <th>Total</th>
            </tr>
          <% } else if (reportType === 'Purchases') { %>
            <tr>
              <th>Purchase ID</th>
              <th>Date</th>
              <th>Item</th>
              <th>Vendor</th>
              <th>Quantity</th>
              <th>Unit Cost</th>
              <th>Total Cost</th>
            </tr>
          <% } else if (reportType === 'Inventory') { %>
            <tr>
              <th>Item Number</th>
              <th>Item Name</th>
              <th>Stock</th>
              <th>Unit Price</th>
              <th>Status</th>
            </tr>
          <% } %>
        </thead>
        <tbody>
          <% data.forEach(record => { %>
            <tr>
              <% if (reportType === 'Sales') { %>
                <td><%= record.saleId %></td>
                <td><%= record.saleDate.toLocaleDateString() %></td>
                <td><%= record.itemName %></td>
                <td><%= record.quantity %></td>
                <td>$<%= record.unitPrice.toFixed(2) %></td>
                <td>$<%= record.total.toFixed(2) %></td>
              <% } else if (reportType === 'Purchases') { %>
                <td><%= record.purchaseId %></td>
                <td><%= record.purchaseDate.toLocaleDateString() %></td>
                <td><%= record.itemName %></td>
                <td><%= record.vendor?.fullName || 'N/A' %></td>
                <td><%= record.quantity %></td>
                <td>$<%= record.unitPrice.toFixed(2) %></td>
                <td>$<%= record.totalCost.toFixed(2) %></td>
              <% } else if (reportType === 'Inventory') { %>
                <td><%= record.itemNumber %></td>
                <td><%= record.itemName %></td>
                <td><%= record.stock %></td>
                <td>$<%= record.unitPrice.toFixed(2) %></td>
                <td><span class="badge <%= record.status === 'Active' ? 'badge-success' : 'badge-secondary' %>">
                  <%= record.status %>
                </span></td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-warning">
      No records found for the selected criteria.
    </div>
  <% } %>

  <div class="mt-4">
    <a href="/reports" class="btn btn-primary">
      <i class="fas fa-arrow-left"></i> Back to Reports
    </a>
  </div>
</div>

<%- include('../partials/footer') %>